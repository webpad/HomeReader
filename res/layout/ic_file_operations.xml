<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingBottom="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_all_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/alpha_00"
                android:src="@drawable/reader_allbooks" >

            </ImageButton>

            <TextView
                android:id="@+id/txt_all_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="All Books"
                android:textColor="@drawable/black"
                android:textSize="24dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/ib_all_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/alpha_00"
                android:src="@drawable/reader_allimages" >
            </ImageButton>

            <TextView
                android:id="@+id/txt_all_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="All Images"
                android:textColor="@drawable/black"
                android:textSize="24dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ext_sd_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_ext_sd_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/alpha_00"
                android:src="@drawable/reader_extsdcard" >
            </ImageButton>

            <TextView
                android:id="@+id/txt_ext_sd_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="Ext SD card"
                android:textColor="@drawable/black"
                android:textSize="24dp" >
            </TextView>
        </LinearLayout>
		<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_bookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/alpha_00"
                android:src="@drawable/reader_index_bookmark" >
            </ImageButton>

            <TextView
                android:id="@+id/txt_bookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="Bookmarks"
                android:textColor="@drawable/black"
                android:textSize="24dp" >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/alpha_00"
                android:src="@drawable/reader_favorites" >
            </ImageButton>

            <TextView
                android:id="@+id/txt_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="Favorites"
                android:textColor="@drawable/black"
                android:textSize="24dp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>