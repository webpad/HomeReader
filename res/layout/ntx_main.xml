<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ntx_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/white">

<RelativeLayout android:id="@+id/ntx_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="500sp"
    android:background="@drawable/white">
    
	<ImageView android:id="@+id/homer_logo"
	    android:layout_width="290sp"
	    android:layout_height="170sp"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginTop="10sp"
	    android:layout_marginLeft="0sp"
	    android:background="@drawable/homer_logo" />
    
	<TextView
            android:id="@+id/txtv_battery"
            android:layout_width="44sp"
            android:layout_height="22sp"
            android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/battery_icon"
            android:gravity="center"
            android:textColor="@drawable/gray_0"
            android:textSize="13sp"
            android:textStyle="bold" />
	<ImageView
        android:id="@+id/imgv_battery_notice"
        android:layout_width="14dp"
        android:layout_height="22dp"
        android:src="@drawable/battery_none"
        android:layout_alignTop="@+id/txtv_battery"
        android:layout_toLeftOf="@+id/txtv_battery" />
