<?xml version="1.0" encoding="utf-8"?>
<shape 
xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle"
>
    
    <!--     
    shape的類型含有:  
    1.rectangle - 長方形、矩形
    2.oval - 橢圓形、卵形
    3.line - 線
    4.ring - 環形
    -->

    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners 
    android:radius="30dip" 
    />
        
    <!-- 框內底部顏色 -->
    <solid 
    android:color="#FFFFFF" 
    />
        
    <!-- 外框，框線粗細，框線顏色 android:color="#228B22" -->
    <stroke
    android:width="4.0dip"
    android:color="#000000" 
    />

    <!-- 畫面顏色漸層，開始色碼與結束色碼進行漸層，角度為315度 -->
<!--     <gradient
    android:startColor="#DC143C"
    android:endColor="#FFD2D2"
    android:angle="315"
    /> -->
        
    <!-- padding內縮距離 -->
    <padding
    android:left="3dip"
    android:right="3dip"
    android:top="5dip"
    android:bottom="5dip"
    />
        
    <!-- 尺寸大小 -->
    <size
    android:width="300dip"
    android:height="300dip"
    />
        
</shape>